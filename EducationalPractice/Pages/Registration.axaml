<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="EducationalPractice.Registration"
			 Background="#252746">


  <UserControl.Styles>
		<StyleInclude Source="/Styles/RegistrationWindowStyle.axaml"></StyleInclude>
	</UserControl.Styles>
	<Grid>
		<Grid.RowDefinitions>
			<RowDefinition Height="Auto"/>
			<RowDefinition Height="*"/>
		</Grid.RowDefinitions>
		<TextBlock x:Name="TBHeader"
						   Classes="Mimo"
						   Text="College"
						   HorizontalAlignment="Left"
						   VerticalAlignment="Top"
				   Margin="10"
				   FontSize="40"/>
		<Button x:Name="BTBack"
				Classes="BTBack"
				HorizontalAlignment="Right"
				VerticalAlignment="Top"
				Margin="10"
				Content="Back"
				Width="60"
				Height="30"
				Click="BTBack_Click">
			<TextBlock Classes="TBBack"
					   Text="Back"
					   HorizontalAlignment="Center"
					   VerticalAlignment="Center"/>
		</Button>
		<Viewbox Grid.Row="1"
				 VerticalAlignment="Top">
			<Grid >
				<Grid.RowDefinitions>
					<RowDefinition/>
					<RowDefinition/>
					<RowDefinition/>
					<RowDefinition/>
					<RowDefinition/>
					<RowDefinition/>
				</Grid.RowDefinitions>
				<Grid.ColumnDefinitions>
					<ColumnDefinition/>
					<ColumnDefinition/>
				</Grid.ColumnDefinitions>


				<TextBlock x:Name="TBRegistration"
								   Classes="Registration"
						   HorizontalAlignment="Center"
						   Grid.Row="1"
						   Grid.ColumnSpan="2"
					 Margin="0 20 0 0">

					Registration
				</TextBlock>

				<TextBox x:Name="TBFullName"
						  Grid.Row="2"
						 Grid.Column="0"
						 Text="Enter your fullname"
						 HorizontalAlignment="Center"
						 GotFocus="TBFullName_GotFocus"
						 LostFocus="TBFullName_LostFocus"
						 Classes="Email"></TextBox>
				<TextBox x:Name="TBLogin"
						  Grid.Row="3"
						 Grid.Column="0"
						 Text="Enter your email"
						 GotFocus="TBLogin_GotFocus"
						 HorizontalAlignment="Center"
						 LostFocus="TBLogin_LostFocus"
						 Classes="Password"></TextBox>
				
				<TextBox x:Name="TBPassword"
						 Grid.Row="4"
						 Grid.Column="0"
								 Classes="Password"
								 HorizontalAlignment="Center"
								 Text="Enter your password"
								 GotFocus="TBPassword_GotFocus"
								 LostFocus="TBPassword_LostFocus"></TextBox>
			
				<Button x:Name="BTSignGoogle"
						Margin="0 15 0 20"
						 Grid.Row="5"
						Grid.ColumnSpan="2"
						Click="BTSignGoogle_Click"
						HorizontalAlignment="Center"
						Classes="ButtonRegistration">
					<TextBlock x:Name="TextBlockRegistration"
							   Classes="TextBlockRegistration"
							   Text="Sign up"></TextBlock>
				</Button>
			</Grid>
		</Viewbox>
	</Grid>
</UserControl>
